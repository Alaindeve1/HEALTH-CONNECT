<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
<!--    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />


    <application
        android:name=".TelehealthApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProjectGroupFA">

        <activity
            android:name=".activities.PatientListActivity"
            android:label="Patient List"
            android:parentActivityName=".activities.ChwDashboardActivity" />

        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.PendingApprovalActivity"
            android:exported="false" />

        <!-- Make sure your LoginActivity no longer has the LAUNCHER intent filter -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />


        <activity
            android:name=".activities.AddPatientActivity"
            android:label="Add New Patient"
            android:parentActivityName=".activities.PatientListActivity" />

        <activity
            android:name=".activities.VitalsActivity"
            android:label="Record Vitals"
            android:parentActivityName=".activities.PatientListActivity" />

        <activity
            android:name=".activities.VitalsHistoryActivity"
            android:label="Vitals History"
            android:parentActivityName=".activities.PatientListActivity" />

        <activity
            android:name=".activities.ConsultationRequestActivity"
            android:label="Request Consultation"
            android:parentActivityName=".activities.PatientListActivity" />

        <activity
            android:name=".activities.DoctorDashboardActivity"
            android:label="Doctor Dashboard"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.ConsultationDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_consultation_details"
            android:theme="@style/Theme.FinalProjectGroupFA" />
        <activity
            android:name=".activities.ConsultationDetailActivity"
            android:label="Consultation Details"
            android:parentActivityName=".activities.ChwDashboardActivity" />
        <activity
            android:name=".activities.VideoCallActivity"
            android:label="Video Call"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.ChatActivity" />
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activities.AdminPanelActivity"
            android:label="Admin Panel"
            android:parentActivityName=".activities.LoginActivity" />

        <activity
            android:name=".activities.ChwDashboardActivity"
            android:label="CHW Dashboard" />
        <activity
            android:name=".activities.CreateProfileActivity"
            android:exported="false" />

        <activity android:name=".activities.OtpVerificationActivity" />
        <activity android:name=".activities.PatientDetailActivity" />
        <activity android:name=".activities.ChwConsultationListActivity" />
        <activity
            android:name=".activities.ReportsActivity"
            android:label="Medical Reports"
            android:parentActivityName=".activities.DoctorDashboardActivity" />
            <activity android:name=".activities.VitalsDetailActivity" />

    </application>

</manifest>